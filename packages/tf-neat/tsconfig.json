{
  "extends": "@tsconfig/node14/tsconfig.json",
	"compilerOptions": {
    "lib": ["dom"],
    "declaration": true,
		"importHelpers": true,
		"target": "ESNext",
    "moduleResolution": "Node",
		"module": "ESNext",
		"outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
		"rootDir": "src",
		"composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
			"@balleranalytics/nba-api-ts": ["../packages/nba-api-ts/src"]
		},
	},
	"include": ["src/**/*", "src/global.d.ts"],
	"exclude": ["./node_modules", "dist"]
}
