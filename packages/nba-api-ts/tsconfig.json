{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "CommonJs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": [
        "es2016",
        "dom",
        "es5"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./**/tests", "./**/*.test.*"]
}