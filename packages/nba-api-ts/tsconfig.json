{
  "extends": "@tsconfig/node14/tsconfig.json",
	"compilerOptions": {
		"importHelpers": true,
		"target": "ESNext",
    "moduleResolution": "Node",
		"module": "CommonJS",
		"outDir": "dist",
    "noImplicitAny": false,
		"rootDir": "src",
		"composite": true,
    "experimentalDecorators": true
	},
	"include": ["src/**/*", "src/global.d.ts"],
	"exclude": ["./node_modules", "dist"]
}